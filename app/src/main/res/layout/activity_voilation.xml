<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RighttoEquality1">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-27dp"
        tools:layout_editor_absoluteY="-145dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="67dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:text="Voilation Of Rights!"
            android:textColor="#769FC3"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>


    <Button
        android:id="@+id/btneql3"
        android:layout_width="174dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="#3D737A"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="Know More!"
        app:backgroundTint="#0E2D37"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        xmlns:android="http://schemas.android.com/apk/res/android" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="608dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="125dp"
            android:layout_marginRight="5dp"
            android:text="Article 226 provide the Supreme Court and the High Courts the authority to bring a lawsuit against a government entity if any citizenâ€™s rights and freedoms are violated.  The High Court has broad powers to issue orders and writs to any person or authority under Article 226 of the Indian Constitution.Article 226 provides the High Courts with the power to issue writs, including writs in the form of habeas corpus, mandamus, prohibition, quo warranto, certiorari, or any of them, to any person or authority, including the government."
            android:textSize="22sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>